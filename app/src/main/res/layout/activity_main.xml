<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.oisin.udacity.MainActivity">

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="@drawable/logo"
        />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_business_black_24dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:drawablePadding="16dp"
        android:text="Udacity\n2465 Latham St.\nMountain View, CA 94043"
        android:textSize="20sp"
        android:onClick="address"/>

    <TextView
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:drawablePadding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:autoLink="phone"
        android:text="650-555-5555"
        android:textSize="20sp" />

    <TextView
        android:drawableLeft="@drawable/ic_link_black_24dp"
        android:drawablePadding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:autoLink="web"
        android:text="www.udacity.com"
        android:textSize="20sp" />

</LinearLayout>
